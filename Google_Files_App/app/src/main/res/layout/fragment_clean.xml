<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CleanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f3f5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cleanInternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1a73e9"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/ivInternalStorageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/progressBar"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/internal_storage_white" />

            <TextView
                android:id="@+id/tvInternalStorageUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivInternalStorageIcon"
                android:text="35.45 GB used"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/tvInternalStorageUsage"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/ivInternalStorageIcon"
                android:progress="40"
                android:progressDrawable="@drawable/progress_internal_storage_bg" />

            <TextView
                android:id="@+id/tvInternalStorageDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBar"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/ivInternalStorageIcon"
                android:text="128 GB total â€¢ Internal"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:background="@drawable/cleaning_suggestions_top" />

        <TextView
            android:layout_width="match_parent"
            android:text="Cleaning suggestions"
            android:textColor="@color/white"
            android:paddingBottom="40dp"
            android:textSize="24sp"
            android:background="#1967d3"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="-25dp"
            app:strokeColor="@color/google_grey"
            app:strokeWidth="0.5dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="125dp"
                android:layout_gravity="top|start"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="125dp"/>

            <ImageView
                android:layout_width="125dp"
                android:layout_gravity="top|center"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="125dp"/>

            <ImageView
                android:layout_width="125dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="125dp"/>
            <TextView
                android:text="6.20 GB, 55 files"
                android:textSize="10sp"
                android:layout_gravity="center|top"
                android:layout_marginTop="135dp"
                android:textColor="@color/google_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Delete large files"
                android:textSize="24sp"
                android:layout_marginTop="150dp"
                android:textColor="@color/black"
                android:layout_gravity="center|top"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="wrap_content"
                android:text="Select files"
                android:textColor="@color/google_blue"
                android:textAllCaps="false"
                android:layout_gravity="center|top"
                android:layout_marginTop="200dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:elevation="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_white_greyroundcorner_bg"
                android:layout_height="40dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            app:strokeColor="@color/google_grey"
            app:strokeWidth="0.5dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivAppView1"
                    android:layout_width="55dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="55dp"/>

                <ImageView
                    android:id="@+id/ivAppView2"
                    android:layout_width="55dp"
                    android:layout_toEndOf="@+id/ivAppView1"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="55dp"/>

                <ImageView
                    android:id="@+id/ivAppView3"
                    android:layout_width="55dp"
                    android:layout_toEndOf="@+id/ivAppView2"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="55dp"/>

                <ImageView
                    android:id="@+id/ivAppView4"
                    android:layout_width="55dp"
                    android:layout_toEndOf="@+id/ivAppView3"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="55dp"/>

                <ImageView
                    android:id="@+id/ivAppView5"
                    android:layout_width="55dp"
                    android:layout_toEndOf="@+id/ivAppView4"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="55dp"/>

                <ImageView
                    android:id="@+id/ivAppView6"
                    android:layout_width="55dp"
                    android:layout_toEndOf="@+id/ivAppView5"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="55dp"/>

            </RelativeLayout>

            <TextView
                android:text="6.20 GB, 55 files"
                android:textSize="10sp"
                android:layout_gravity="center|top"
                android:layout_marginTop="65dp"
                android:textColor="@color/google_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Delete large files"
                android:textSize="24sp"
                android:layout_marginTop="80dp"
                android:textColor="@color/black"
                android:layout_gravity="center|top"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="wrap_content"
                android:text="Select files"
                android:textColor="@color/google_blue"
                android:textAllCaps="false"
                android:layout_gravity="center|top"
                android:layout_marginTop="130dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:elevation="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_white_greyroundcorner_bg"
                android:layout_height="40dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            app:strokeColor="@color/google_grey"
            app:strokeWidth="0.5dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivDownloadFileView1"
                    android:layout_width="90dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="90dp"/>

                <ImageView
                    android:id="@+id/ivDownloadFileView2"
                    android:layout_width="90dp"
                    android:layout_toEndOf="@+id/ivDownloadFileView1"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="90dp"/>

                <ImageView
                    android:id="@+id/ivDownloadFileView3"
                    android:layout_width="90dp"
                    android:layout_toEndOf="@+id/ivDownloadFileView2"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="90dp"/>

                <ImageView
                    android:id="@+id/ivDownloadFileView4"
                    android:layout_width="90dp"
                    android:layout_toEndOf="@+id/ivDownloadFileView3"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_height="90dp"/>


            </RelativeLayout>

            <TextView
                android:text="6.20 GB, 55 files"
                android:textSize="10sp"
                android:layout_gravity="center|top"
                android:layout_marginTop="100dp"
                android:textColor="@color/google_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Delete large files"
                android:textSize="24sp"
                android:layout_marginTop="115dp"
                android:textColor="@color/black"
                android:layout_gravity="center|top"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="wrap_content"
                android:text="Select files"
                android:textColor="@color/google_blue"
                android:textAllCaps="false"
                android:layout_gravity="center|top"
                android:layout_marginTop="165dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:elevation="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_white_greyroundcorner_bg"
                android:layout_height="40dp"/>

        </com.google.android.material.card.MaterialCardView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/cleaning_suggestions_bottom" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white" />

    </LinearLayout>

</ScrollView>